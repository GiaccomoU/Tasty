<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        tools:context="com.example.electiva.agile.MainActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#fc575c"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnHome"
            android:src="@mipmap/f_home"
            android:layout_marginStart="18dp"
            android:layout_alignParentBottom="true"
            android:onClick="irInicio" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnHeart"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnCategory"
            android:src="@mipmap/f_heart"
            android:layout_marginLeft="50dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnSearch"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnHome"
            android:src="@mipmap/f_search"
            android:layout_marginLeft="50dp"
            android:onClick="irBusqueda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Favorites"
            android:id="@+id/textView2"
            android:autoText="false"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnCategory"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnSearch"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/f_category"
            android:onClick="irCategorias" />
    </RelativeLayout>
</LinearLayout>