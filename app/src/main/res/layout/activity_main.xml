<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.electiva.agile.MainActivity"
    android:background="#b4f1fd">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnHome"
        android:src="@mipmap/h_home"
        android:layout_marginStart="18dp"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnHeart"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnCategory"
        android:src="@mipmap/h_heart"
        android:layout_marginLeft="50dp"
        android:onClick="irFavoritos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start"
        android:id="@+id/Inicio"
        android:autoText="false"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnSearch"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnHome"
        android:src="@mipmap/h_search"
        android:layout_marginLeft="50dp"
        android:onClick="irBusqueda" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnCategory"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnSearch"
        android:layout_marginLeft="50dp"
        android:src="@mipmap/h_category"
        android:onClick="irCategorias" />

</RelativeLayout>

