<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        tools:context="com.example.electiva.agile.MainActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#fdd351"
        android:layout_gravity="center_horizontal"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnHome"
            android:src="@mipmap/c_home"
            android:layout_marginStart="18dp"
            android:layout_alignParentBottom="true"
            android:onClick="irInicio" />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/btnHeart"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnCategory"
            android:src="@mipmap/c_heart"
            android:layout_marginLeft="50dp"
            android:onClick="irFavoritos" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnSearch"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnHome"
            android:src="@mipmap/c_search"
            android:layout_marginLeft="50dp"
            android:onClick="irBusqueda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Category"
            android:id="@+id/textView"
            android:autoText="false"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/btnCategory"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnSearch"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/c_category" />
    </RelativeLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnBreakfast"
        android:src="@drawable/circulo_naranja"
        android:background="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:onClick="irVideo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Breakfast"
        android:id="@+id/textView4"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/btnBreakfast"
        android:layout_toEndOf="@+id/btnBreakfast"
        android:layout_margin="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDinner"
        android:src="@drawable/circulo_rojo"
        android:background="#FFFFFF"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:onClick="irVideo" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDesserts"
        android:src="@drawable/circulo_verde"
        android:background="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/btnBreakfast"
        android:onClick="irVideo" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDrinks"
        android:src="@drawable/circulo_celeste"
        android:background="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toStartOf="@+id/textView5"
        android:onClick="irVideo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lunch-Dinner"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/btnDinner"
        android:layout_toEndOf="@+id/btnDinner"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Desserts"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/btnDesserts"
        android:layout_toEndOf="@+id/btnDesserts"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Drinks"
        android:id="@+id/textView7"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView5" />

</RelativeLayout>