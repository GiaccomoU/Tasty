<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        tools:context="com.example.electiva.agile.MainActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#fd82aa">

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/btnHome"
            android:src="@mipmap/b_home"
            android:layout_marginStart="18dp"
            android:layout_alignParentBottom="true"
            android:onClick="irInicio" />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/btnHeart"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnCategory"
            android:src="@mipmap/b_heart"
            android:layout_marginLeft="50dp"
            android:onClick="irFavoritos" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btnSearch"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnHome"
            android:src="@mipmap/b_search"
            android:layout_marginLeft="50dp"
            android:onClick="irBusqueda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Search"
            android:id="@+id/textView3"
            android:autoText="false"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:id="@+id/btnCategory"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnSearch"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/b_category" />
    </RelativeLayout>

    <RelativeLayout
        tools:context="com.example.electiva.agile.MainActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#fd82aa"
        android:layout_gravity="right"
        android:layout_weight="0.42">

        <EditText
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:id="@+id/busqueda"
            android:layout_gravity="center_horizontal"
            android:text="Search"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:text="Breakfast"
        android:id="@+id/btnBreakfast"
        android:layout_gravity="center_horizontal"
        android:background="transparent"
        android:textSize="18dp"
        android:layout_weight="0.11"
        android:onClick="irVideo" />

    <Button
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:text="Dinner-Lunch"
        android:id="@+id/btndinner"
        android:layout_weight="0.11"
        android:background="transparent"
        android:textSize="18dp"
        android:onClick="irVideo" />

    <Button
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:text="Desserts"
        android:id="@+id/btnDesserts"
        android:layout_weight="0.11"
        android:background="transparent"
        android:textSize="18dp"
        android:onClick="irVideo" />

    <Button
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:text="Drinks"
        android:id="@+id/btnDrinks"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"
        android:background="transparent"
        android:textSize="18dp"
        android:onClick="irVideo" />

    <Button
        android:layout_width="384dp"
        android:layout_height="50dp"
        android:text="Search"
        android:id="@+id/btnSearch"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:layout_weight=".11"
        android:background="transparent"
        android:onClick="irVideo" />

</LinearLayout>